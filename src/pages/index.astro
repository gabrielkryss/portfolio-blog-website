---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import Socials from "@components/Socials.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS, SKILLS, EDUCATION } from "@consts";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h4 class="animate font-semibold text-black dark:text-white">
      Hello there! <span class="text-xl">üëãüèª</span> I'm
    </h4>
    <h1 class="animate main-heading font-outfit lg:h-20 md:h-20 sm:h-96 text-7xl md:text-7xl sm:text-7xl">
      Gabriel Kwong
    </h1>
    <div class="space-y-16">
      <section class="">
        <article class="space-y-4">
          <p class="animate">
            I'm a software engineer based in Burnaby, Canada. 
            I enjoy building games, applications (web, native, mobile), servers, plugins or anything in between. 
            I have over 5+ years of programming experience and knoweadge in fields like games, game engines, computer graphics, VR/XR, networking, backend, data science, information systems, databases, LLMs, and ML/DL. 
            I practice continous learning and actively study more about advanced game development, computer graphics techniques, networking design, production coding and practice, game engine architecture, technical art, and AI technologies.
          </p>
          <div class="animate container flex sm:flex-row flex-col">
            <Socials />
          <div/>
        </article>
      </section>

      <section class="animate space-y-6">
        <h5 class="font-semibold text-black dark:text-white">
          Skills 
        </h5>
        <article>
          <h6 class="font-smeibold">Programing Languages:</h6>
          {SKILLS.programming_languages}
          <h6 class="font-semibold mt-3">Tools:</h6>
          {SKILLS.tools}
          <h6 class="font-semibold mt-3">Soft Skills:</h6>
          {SKILLS.soft}
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Latest posts
          </h5>
          <Link href="/portfolio-blog-website/blog">
            See all posts
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {blog.map(post => (
            <li>
              <ArrowCard entry={post} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Work Experience
          </h5>
          <Link href="/portfolio-blog-website/work">
            See all work
          </Link>
        </div>
        <ul class="flex flex-col space-y-4">
          {work.map(entry => (
            <li>
              <div class="text-sm opacity-75">
                {dateRange(entry.data.dateStart, entry.data.dateEnd)}
              </div>
              <div class="font-semibold text-black dark:text-white">
                {entry.data.company}
              </div>
              <div class="text-sm opacity-75">
                {entry.data.role}
              </div>
              <article>
                <entry.Content />
              </article>
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
            Recent projects
          </h5>
          <Link href="/portfolio-blog-website/projects">
            See all projects
          </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {projects.map(project => (
            <li>
              <ArrowCard entry={project} />
            </li>
          ))}
        </ul>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">
           Education 
          </h5>
        </div>
        <ul class="flex flex-col space-y-4">
          <li>
            <div class="text-sm opacity-75">
              {dateRange(EDUCATION.dateStart, EDUCATION.dateEnd)}
            </div>
            <div class="font-semibold text-black dark:text-white">
              {EDUCATION.schoolName}
            </div>
            <div class="text-sm opacity-75">
              {EDUCATION.degree}
            </div>
          </li>
        </ul>
      </section>


      <section class="animate space-y-4">
        <h5 class="font-semibold text-black dark:text-white">
          Let's Connect
        </h5>
        <article>
          <p>
            If you want to get in touch with me about something or just to say hi,
            reach out on social media or send me an email.
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
    </div>
  </Container>
</PageLayout>
